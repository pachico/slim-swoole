<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="vendor/autoload.php"
         backupGlobals="false"
         backupStaticAttributes="false"
         colors="true"
         verbose="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="true"
         syntaxCheck="false">
    <php>
        <ini name="error_reporting" value="E_ALL"/>
        <ini name="display_errors" value="On"/>
        <ini name="display_startup_errors" value="On"/>
        <const name="DATABASE_FIXTURE_XML" value="tests/Fixture/MariaDB/acl.xml"/>
        <const name="CONTRACT_PATH" value="vendor/oc/lib-ms-acl-contracts-v1/src/contract"/>
    </php>

    <testsuites>
        <testsuite name="unit">
            <directory>tests/Unit</directory>
        </testsuite>
    </testsuites>

    <logging>
        <log type="junit" target="build/logs/junit_unit.xml"/>
        <log type="coverage-clover" target="build/logs/coverage.xml"/>
        <log type="coverage-html" target="build/logs/html"/>
        <log type="coverage-text" target="php://stdout" showUncoveredFiles="false" showOnlySummary="true"/>
    </logging>
</phpunit>